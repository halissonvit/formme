<% if object.errors.any? %>
    <div id='(error_explanation)'>
      <h3><%= t('errors.template.header', :model => object.class.model_name.human, :count => object.errors.count) %></h3>

      <ul>
        <% object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
