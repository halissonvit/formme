<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: 'form-login'}) do |f| %>
    <h2 class="form-login-heading"><%= t_form_title_for(resource) %> </h2>
    <div class="login-wrap">

      <%= devise_error_messages! %>

      <%= f.email_field :email, class: 'form-control', wrapper_class: 'float-label-wrapper', placeholder: t('activerecord.attributes.user.email'), autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %>
        <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br/>
        <%= f.password_field_without_bootstrap :password, autocomplete: 'off', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br/>
        <%= f.password_field_without_bootstrap :password, autocomplete: 'off', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br/>
        <%= f.password_field_without_bootstrap :current_password, autocomplete: 'off', class: 'form-control' %>
      </div>

      <%= render partial: 'shared/forms/actions', locals: {f: f, text: ('<i class="fa fa-user"></i> ' + t('.update')).html_safe, extra_class: 'btn-block'} %>

      <hr/>
      <h3><%= t('.cancel_my_account') %></h3>

      <p><%= t('.unhappy') %> ? </p>
      <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-theme04' %>
    </div>
<% end %>
